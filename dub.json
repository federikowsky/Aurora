{
    "name": "aurora",
    "description": "High-performance HTTP/1.1 backend framework for D",
    "version": "1.0.0",
    "authors": [
        "Federico Filippi"
    ],
    "copyright": "Copyright Â© 2025, Federico Filippi",
    "license": "MIT",
    "targetType": "library",
    
    "dependencies": {
        "vibe-core": "~>2.8.0",
        "eventcore": "~>0.9.0",
        "mir-algorithm": "~>3.22.0",
        "wire": "~>1.0.0",
        "fastjsond": "~>1.0.0",
        "aurora-websocket": "~>1.0.0"
    },
    
    "libs-linux": ["stdc++"],
    "libs-osx": ["c++"],
    
    "sourcePaths": ["source"],
    "importPaths": ["source"],
    
    "buildTypes": {
        "release": {
            "dflags-ldc2": ["-O2", "-release", "-enable-inlining"],
            "dflags-dmd": ["-O", "-release", "-inline"]
        }
    },
    
    "configurations": [
        {
            "name": "library",
            "targetType": "library"
        },
        {
            "name": "unittest",
            "targetType": "executable",
            "dependencies": {
                "unit-threaded": "~>2.1.0"
            },
            "sourcePaths": ["source", "tests"],
            "importPaths": ["source", "tests"],
            "mainSourceFile": "tests/runner.d",
            "excludedSourceFiles": [
                "tests/realworld/*",
                "tests/stress/*",
                "tests/integration/test_server.d",
                "tests/integration/fiber_server_test.d"
            ],
            "dflags": ["-unittest"]
        },
        {
            "name": "unittest-cov",
            "targetType": "executable",
            "dependencies": {
                "unit-threaded": "~>2.1.0"
            },
            "sourcePaths": ["source", "tests"],
            "importPaths": ["source", "tests"],
            "mainSourceFile": "tests/runner.d",
            "excludedSourceFiles": [
                "tests/realworld/*",
                "tests/stress/*"
            ],
            "dflags": ["-unittest", "-cov"]
        }
    ]
}
