{
    "name": "aurora",
    "description": "High-performance HTTP/1.1 backend framework for D",
    "authors": [
        "Federico Filippi"
    ],
    "copyright": "Copyright Â© 2025, Federico Filippi",
    "license": "MIT",
    "targetType": "library",
    "dependencies": {
        "vibe-core": "~>2.8.6",
        "eventcore": "~>0.9.0",
        "mir-algorithm": "~>3.22.0",
        "unit-threaded": "~>2.1.9"
    },
    "libs": [
        "wire",
        "fastjsond",
        "c++"
    ],
    "importPaths": [
        "source",
        "lib/wire/source",
        "lib/fastjsond/source"
    ],
    "lflags": [
        "-Llib/wire/build",
        "-Llib/fastjsond/build"
    ],
    "configurations": [
        {
            "name": "library",
            "targetType": "library"
        },
        {
            "name": "unittest",
            "targetType": "executable",
            "dependencies": {
                "unit-threaded": "~>2.1.0"
            },
            "sourceFiles": [
                "tests/runner.d"
            ],
            "importPaths": [
                "source",
                "tests"
            ],
            "sourcePaths": [
                "source",
                "tests"
            ],
            "mainSourceFile": "tests/runner.d",
            "excludedSourceFiles": [
                "tests/unit/web/middleware.disabled/*",
                "tests/realworld/*",
                "tests/stress/*"
            ],
            "dflags": [
                "-unittest"
            ]
        },
        {
            "name": "unittest-cov",
            "targetType": "executable",
            "dependencies": {
                "unit-threaded": "~>2.1.0"
            },
            "sourceFiles": [
                "tests/runner.d"
            ],
            "importPaths": [
                "source",
                "tests"
            ],
            "sourcePaths": [
                "source",
                "tests"
            ],
            "mainSourceFile": "tests/runner.d",
            "dflags": [
                "-unittest",
                "-cov"
            ]
        },
        {
            "name": "unified-test",
            "targetType": "executable",
            "targetName": "unified_test",
            "mainSourceFile": "examples/unified_test.d",
            "sourcePaths": [
                "source"
            ],
            "importPaths": [
                "source",
                "/Users/federicofilippi/Desktop/D/Wire/source"
            ]
        },
        {
            "name": "mt-test",
            "targetType": "executable",
            "targetName": "mt_test",
            "mainSourceFile": "examples/mt_test.d",
            "sourcePaths": [
                "source"
            ],
            "importPaths": [
                "source",
                "/Users/federicofilippi/Desktop/D/Wire/source"
            ]
        },
        {
            "name": "test-server",
            "targetType": "executable",
            "targetName": "test_server",
            "mainSourceFile": "tests/integration/test_server.d",
            "sourceFiles": ["tests/integration/test_server.d"],
            "excludedSourceFiles": ["source/**/*", "tests/**/*"],
            "importPaths": ["source"]
        }
    ],
    "buildTypes": {
        "debug": {
            "buildOptions": [
                "debugMode",
                "debugInfo"
            ]
        },
        "release": {
            "buildOptions": [
                "releaseMode",
                "optimize",
                "inline"
            ],
            "dflags-ldc": [
                "-O3",
                "-release"
            ]
        },
        "release-nobounds": {
            "buildOptions": [
                "releaseMode",
                "optimize",
                "inline",
                "noBoundsCheck"
            ],
            "dflags-ldc": [
                "-O3",
                "-release",
                "-boundscheck=off"
            ]
        }
    }
}